<div class="row"></div>
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-2">
      <h3 class="mb-0">Detalle del Carrito</h3>
      <span class="badge bg-primary fs-5">Carrito: {{cart._id}}</span>
    </div>
    <hr />
    {{#if cart.products.length}}
      <div class="row">
        {{#each cart.products}}
          <div class="col-md-6 col-lg-4 mb-4 d-flex align-items-stretch">
            <div class="card shadow-sm h-100 border-0">
              <div class="position-relative">
                {{#if product.thumbnail}}
                  <img src="/productos/{{product.thumbnail}}" class="card-img-top p-3" alt="Imagen del producto" style="height: 220px; object-fit: contain; background: #f5f5f5; border-radius: 1rem;" />
                {{else}}
                  <img src="/productos/sin_images.png" class="card-img-top p-3" alt="Imagen del producto" style="height: 220px; object-fit: contain; background: #f5f5f5; border-radius: 1rem;" />
                {{/if}}
              </div>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-1" style="font-weight: 600; color: #333;">{{product.title}}</h5>
                <p class="card-text mb-2" style="min-height: 48px; color: #555;">{{product.description}}</p>
                <ul class="list-unstyled mb-2">
                  <li><span class="badge bg-info text-dark">Código: {{product.code}}</span></li>
                  <li><span class="badge bg-secondary">Stock: {{product.stock}}</span></li>
                  <li><span class="badge bg-light text-dark">Categoría: {{product.category}}</span></li>
                  <li><span class="badge bg-success">Cantidad en carrito: {{quantity}}</span></li>
                </ul>
                <span class="fs-4 fw-bold text-success">${{product.price}}</span>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <div class="alert alert-info text-center" role="alert">
        El carrito está vacío
      </div>
    {{/if}}
  </div>
</div>
